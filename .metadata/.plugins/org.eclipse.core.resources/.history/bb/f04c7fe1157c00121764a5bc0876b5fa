package edu.kcg.Poker.Table;

public class TableChips {
	private int anty;
	private int limit;
	private int maxRaise;
	private int pot;
	
	public int getLimit() {
		return limit;
	}

	public int getMaxRaise() {
		return maxRaise;
	}

	public int getPot() {
		return pot;
	}
	public int getAnty() {
		return anty;
	}
	public void addPot(int x) {
		pot += x;
	}
	public void setLimit(int limit) {
		this.limit = limit;
	}

	public void setMaxRaise(int maxBet) {
		this.maxRaise = maxBet;
	}

	public void setPot(int pot) {
		this.pot = pot;
	}
	public void setAnty(int anty) {
		this.anty = anty;
	}
}
